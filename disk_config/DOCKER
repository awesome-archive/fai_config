# example of new config file for setup-storage
#
# <type> <mountpoint> <size>   <fs type> <mount options> <misc options>

#disk_config disk1 disklabel:msdos bootable:1 fstabkey:uuid
disk_config disk1 disklabel:msdos bootable:1 fstabkey:label
#disable ext4lazyinit

primary /      8G-32G   ext4  rw,noatime,data=ordered,nobarrier,inode_readahead_blks=4096,delalloc,commit=300,errors=remount-ro createopts="-L ROOT -E lazy_itable_init=0,lazy_journal_init=0" tuneopts="-c 0 -i 0 -O ^metadata_csum"
logical /var   4G-95%   ext4  rw,noatime,data=ordered,nobarrier,inode_readahead_blks=4096,delalloc,commit=300 createopts="-L VAR -m 1 -E lazy_itable_init=0,lazy_journal_init=0" tuneopts="-c 0 -i 0 -O ^metadata_csum"
