# example of new config file for setup-storage
#
# <type> <mountpoint> <size>   <fs type> <mount options> <misc options>

#disk_config disk1 disklabel:msdos bootable:1 fstabkey:uuid
disk_config disk1 disklabel:msdos bootable:1 fstabkey:label

primary /      4G-15G   ext4  rw,relatime,data=ordered,nobarrier,inode_readahead_blks=4096,delalloc,commit=600,errors=remount-ro createopts="-L ROOT" tuneopts="-c 0 -i 0 -O ^metadata_csum"
logical swap   200-4G   swap  sw                       createopts="-L SWAP"
#logical /tmp   100-2G   ext4  rw,relatime,data=ordered,nobarrier,inode_readahead_blks=4096,delalloc,commit=600,nosuid,nodev createopts="-L TMP -m 0" tuneopts="-c 0 -i 0 -O ^metadata_csum"
logical /home  100-80%  ext4  rw,relatime,data=ordered,nobarrier,inode_readahead_blks=4096,delalloc,commit=600,nosuid,nodev createopts="-L HOME -m 1" tuneopts="-c 0 -i 0 -O ^metadata_csum"
