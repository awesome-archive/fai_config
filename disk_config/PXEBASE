# example of new config file for setup-storage
#
# <type> <mountpoint> <size>   <fs type> <mount options> <misc options>

#disk_config disk1 disklabel:msdos bootable:1 fstabkey:uuid
disk_config disk1 disklabel:msdos bootable:1 fstabkey:label

primary /      8G-24G   ext4  rw,noatime,nobarrier,errors=remount-ro createopts="-L ROOT -E lazy_itable_init=0,lazy_journal_init=0" tuneopts="-c 0 -i 0 -O ^metadata_csum"
logical swap   1G-16G   swap  sw                   createopts="-L SWAP"
#logical /tmp   1G-4G   ext4  rw,noatime,nobarrier createopts="-L TMP -m 0 -E lazy_itable_init=0,lazy_journal_init=0" tuneopts="-c 0 -i 0 -O ^metadata_csum"
logical /data  1G-80%  ext4  rw,noatime,nobarrier createopts="-L DATA -m 1 -E lazy_itable_init=0,lazy_journal_init=0" tuneopts="-c 0 -i 0 -O ^metadata_csum"
