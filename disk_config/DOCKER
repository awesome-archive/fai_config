# example of new config file for setup-storage
#
# <type> <mountpoint> <size>   <fs type> <mount options> <misc options>

#disk_config disk1 disklabel:msdos bootable:1 fstabkey:uuid
disk_config disk1 disklabel:msdos bootable:1 fstabkey:label

primary /      8G-32G   ext4  rw,relatime,data=ordered,nobarrier,inode_readahead_blks=4096,delalloc,commit=600,errors=remount-ro createopts="-L ROOT" tuneopts="-c 0 -i 0 -O ^metadata_csum"
logical /var   4G-95%   ext4  rw,relatime,data=ordered,nobarrier,inode_readahead_blks=4096,delalloc,commit=600 createopts="-L VAR -m 1" tuneopts="-c 0 -i 0 -O ^metadata_csum"
